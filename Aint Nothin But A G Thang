voice = 0
live_loop :Vocals do
  31.times do
    puts (Lyrics[voice] )
    sleep(0.75)
    voice = voice +1
  end
  stop
end


use_synth :fm
use_bpm 189
define :bass_notes do |a, b, c|
  play :b2, amp: 0.5
  sleep 0.5
  play a, amp: 0.5
  sleep 0.5
  play b, amp: 0.5
  sleep 0.5
  play c, amp: 0.5
  sleep 0.5
  sleep 2
end

live_loop :bass_notes2 do
  13.times do
    bass_notes :a2, :f2, :b2
    bass_notes :d3, :es3, :fs3
    bass_notes :d3, :es3, :fs3
    bass_notes :a2, :f2, :b2
  end
  stop
end

sleep 190

