use_synth :organ_tonewheel
use_bpm 189
define :bass_notes do |a, b, c|
  play :b2
  sleep 0.5
  play a
  sleep 0.5
  play b
  sleep 0.5
  play c
  sleep 0.5
  sleep 2
end

live_loop :bass_notes2 do
  12.times do
    bass_notes :a2, :f2, :b2
    bass_notes :d3, :es3, :fs3
    bass_notes :d3, :es3, :fs3
    bass_notes :a2, :f2, :b2
  end
  stop
end
