# Stranger Things Main Theme Challenge G

notes = [:c2, :e2, :g2, :b2, :c3, :b2, :g2, :e2]
index = 0
num = 0
use_bpm 160
use_synth :saw
live_loop :main_theme do
  with_fx :distortion do
    8.times do
      play (notes [num])
      sleep (0.5)
      num = num + 1
      puts(num)
    end
    num = 0
  end
end
